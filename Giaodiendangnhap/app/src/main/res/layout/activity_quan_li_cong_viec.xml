<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".QuanLiCongViecActivity">

    <TextView
        android:id="@+id/textView_titleQL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1A701D"
        android:gravity="center"
        android:text="Quan ly cong viec hang tuan"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_congviec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cong viec: " />

        <EditText
            android:id="@+id/edit_congviec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_noidung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Noi dung:   " />

        <EditText
            android:id="@+id/edit_noidung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_ngayHT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ngay hoan thanh:" />

        <TextView
            android:id="@+id/textView_ngay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd/MM/yyyy"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_gioHT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gio HT:                       " />

        <TextView
            android:id="@+id/textView_gio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00:00 AM"/>

        <Button
            android:id="@+id/button_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Time" />
    </LinearLayout>

    <Button
        android:id="@+id/button_themcv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Them CV" />

    <TextView
        android:id="@+id/textView_DSCV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#568123"
        android:textColor="@color/white"
        android:text="Danh sach cong viec:" />

    <ListView
        android:id="@+id/list_view_QLCV"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>