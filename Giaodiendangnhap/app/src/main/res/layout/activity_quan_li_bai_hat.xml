<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuanLiBaiHatActivity">

    <TextView
        android:id="@+id/textView_titleQLBaiHat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0D9E12"
        android:gravity="center"
        android:text="Quản lý Album"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <Button
        android:id="@+id/button_themBaiHat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm Album" />

    <Button
        android:id="@+id/button_xemDS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xem danh sách Album" />

    <Button
        android:id="@+id/button_quanliBH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý bài hát" />
</LinearLayout>