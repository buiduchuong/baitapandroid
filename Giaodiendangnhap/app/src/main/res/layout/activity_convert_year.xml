<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConvertYearActivity">
    <TextView
        android:background="#39933C"
        android:id="@+id/textView_titleCovert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Chuyen doi nam duong lich" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView_duong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam duong lich" />

            <EditText
                android:id="@+id/edittext_duong"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number|textPersonName" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/button_convert"
                android:layout_column="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Convert" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView_am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam am lich" />

            <EditText
                android:background="#FFEB3B"
                android:id="@+id/edit_am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                 />

        </TableRow>

    </TableLayout>
</LinearLayout>