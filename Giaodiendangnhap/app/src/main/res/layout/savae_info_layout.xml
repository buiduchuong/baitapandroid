<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_title_saveInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5BAF4C"
        android:gravity="center"
        android:text="Personal nformation"
        android:textColor="#FFEB3B"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full name:       " />

        <EditText

            android:id="@+id/edit_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_CMND"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CMND:             " />

        <EditText
            android:id="@+id/edit_cmnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number|textPersonName" />

    </LinearLayout>

    <TextView
        android:textColor="#EAD419"
        android:id="@+id/textView_degree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2C47DD"
        android:gravity="center"
        android:text="Degree"
        android:textSize="18dp" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioButton_inter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Intermediate" />

        <RadioButton
            android:id="@+id/radioButton_coll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="College" />

        <RadioButton
            android:id="@+id/radioButton_uni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="University" />


    </RadioGroup>

    <TextView
        android:id="@+id/textView_interes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#193DBD"
        android:gravity="center"
        android:text="Interest"
        android:textColor="#FAE317"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox_par"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Read paper" />

        <CheckBox
            android:id="@+id/checkBox_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Read book" />

        <CheckBox
            android:id="@+id/checkBox_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Read coding" />
    </LinearLayout>

    <TextView
        android:textColor="#EAD419"
        android:id="@+id/textView_addInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2C47DD"
        android:gravity="center"
        android:text="Info add"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/edit_info"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:ems="10"
        android:inputType="textPersonName"
        />

    <Button
        android:id="@+id/button_senInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send info" />
</LinearLayout>