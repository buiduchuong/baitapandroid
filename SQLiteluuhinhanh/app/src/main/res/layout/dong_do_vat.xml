<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_ha"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_mage" />

    <TextView
        android:id="@+id/textView_tendv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="56dp"
        android:text="Ten do vat"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imageView_ha"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_mota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="22dp"
        android:text="Mo ta"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imageView_ha"
        app:layout_constraintTop_toBottomOf="@+id/textView_tendv" />
</androidx.constraintlayout.widget.ConstraintLayout>